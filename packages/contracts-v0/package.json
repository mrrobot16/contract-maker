        "prettier:check": "prettier --check .",
        "lint": "yarn lint:sol",
        "list:ts": "",
        "lint:sol": "yarn solhint",
        "solhint": "solhint contracts/**/*.sol"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
